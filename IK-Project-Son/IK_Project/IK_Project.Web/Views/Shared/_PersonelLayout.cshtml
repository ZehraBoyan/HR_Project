<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Team1 HR Project</title>
    <meta name="description" content="Ela Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="">
    <link rel="shortcut icon" href="">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link href="~/layoutfolders/assets/css/cs-skin-elastic.css" rel="stylesheet" />
    <link href="~/layoutfolders/assets/css/style.css" rel="stylesheet" />
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/chartist@0.11.0/dist/chartist.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jqvmap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/weathericons@2.1.0/css/weather-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.9.0/dist/fullcalendar.min.css" rel="stylesheet" />

    <style>
        #weatherWidget .currentDesc {
            color: #ffffff !important;
        }

        .traffic-chart {
            min-height: 335px;
        }

        #flotPie1 {
            height: 150px;
        }

            #flotPie1 td {
                padding: 3px;
            }

            #flotPie1 table {
                top: 20px !important;
                right: -10px !important;
            }

        .chart-container {
            display: table;
            min-width: 270px;
            text-align: left;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        #flotLine5 {
            height: 105px;
        }

        #flotBarChart {
            height: 150px;
        }

        #cellPaiChart {
            height: 160px;
        }
    </style>
</head>

<body>
    <!-- Left Panel -->
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">
            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="menu-title">Personel Home Page</li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="PersonelHomePage" class="dropdown-toggle">Home Page</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="PersonelDetails" class="dropdown-toggle">Details</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="PersonelUpdatePage" asp-route-id="@ViewBag.PersonelId" class="dropdown-toggle">Update Information</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="LeaveRequest" class="dropdown-toggle">Add New Leave Request</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="LeaveRequestList" class="dropdown-toggle">Leave Request List</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="ExpenseRequest" class="dropdown-toggle">Expense Request</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="ExpenseRequestList" class="dropdown-toggle">Expense Request List</a>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a asp-controller="Account" asp-action="CompanyList" class="dropdown-toggle">Company List</a>
                    </li>

                </ul>
            </div>
        </nav>
    </aside>
    <!-- /#left-panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <header id="header" class="header">
            <div class="top-left">
                <div class="navbar-header">
                    <a class="navbar-brand" href="./"><img src="~/images/OurLogo.png" alt="Logo"></a>
                    <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
                </div>
            </div>
            <div class="top-right">
                <div class="header-menu">

                    <div class="user-area dropdown float-right">
                        <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img class="user-avatar rounded-circle" src="~/images/@ViewBag.PersonelPhoto">
                        </a>

                        <div class="user-menu dropdown-menu">
                            <a class="nav-link" asp-area="PersonelArea" asp-controller="Personel" asp-action="PersonelDetails"><i class="fa fa- user"></i>Details</a>
                            <a class="nav-link" asp-area="PersonelArea" asp-controller="Personel" asp-action="PersonelUpdatePage" asp-route-id="@ViewBag.PersonelId"><i class="fa fa- user"></i>Update</a>
                            <a class="nav-link text-danger" asp-area="PersonelArea" asp-controller="Account" asp-action="Logout"><i class="fa fa- user"></i>Log Out</a>
                        </div>
                    </div>

                </div>
            </div>
        </header>
        <!-- /#header -->
        <!-- Content -->
        <div class="content">
            @RenderBody()
        </div>
        <!-- /.content -->
        <!-- Footer -->
        @*<footer class="site-footer">
        <div class="footer-inner bg-white">
        <div class="row">
        </div>
        </div>
        </footer>*@
        <!-- /.site-footer -->
    </div>
    <!-- /#right-panel -->
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="~/layoutfolders/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts",required: false)
</body>
</html>
