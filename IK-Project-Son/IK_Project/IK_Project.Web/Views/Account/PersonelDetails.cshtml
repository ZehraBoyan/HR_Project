@model PersonelDTO

@{
    ViewData["Title"] = "Personel Details";
}
<link href="~/login-form-18/css/style.css" rel="stylesheet" />
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-8 mb-4 mb-lg-0" style="">
                <div class="card mb-3" style="border: none;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-black"
                             style="">
                            <img src="~/images/@Model.Photo"
                                 alt="Avatar" style="width: 150px; height: 170px; margin-top:20px; margin-bottom:20px;"
                                 class="rounded-circle" />
                            <br />

                            <strong style="color:antiquewhite">First Name</strong><p class="text-info">@Model.FirstName</p><br />
                            @if (Model.MiddleName == null)
                            {
                                <strong style="color:antiquewhite">Middle Name</strong>

                                <p class="text-info">-</p>

                                <br />
                            }
                            else
                            {
                                <strong style="color:antiquewhite">Middle Name</strong>

                                <p class="text-info">@Model.MiddleName</p>

                                <br />
                            }
                            <strong style="color:antiquewhite">Last Name</strong><p class="text-info">@Model.LastName</p><br />
                            @if (Model.SecondLastName == null)
                            {
                                <strong style="color:antiquewhite">Second Last Name</strong>

                                <p class="text-info">-</p>

                                <br />
                            }
                            else
                            {
                                <strong style="color:antiquewhite">Second Last Name</strong>

                                <p class="text-info">@Model.SecondLastName</p>

                                <br />
                            }
                            <p>
                                <strong style="color:seagreen">" <u>@Model.Occupation</u> "</strong>
                            </p>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <strong class="text-black-50">Informations</strong>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <strong>Birth Date</strong>
                                        <p class="text-muted">@Model.BirthDate</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Birth Place</strong>
                                        <p class="text-muted">@Model.BirthPlace</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>TC Identity No</strong>
                                        <p class="text-muted">@Model.TcIdentityNo</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Hire Date</strong>
                                        <p class="text-muted">@Model.HireDate</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Dismissal Date</strong>
                                        <p class="text-muted">@Model.DismissalDate</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Is Activate</strong>
                                        <p class="text-muted">@Model.IsActivate</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Email</strong>
                                        <p class="text-muted">@Model.Email</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Phone</strong>
                                        <p class="text-muted">@Model.PhoneNumber</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Company Name</strong>
                                        <p class="text-muted">@Model.CompanyName</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <strong>Department</strong>
                                        <p class="text-muted">@Model.Department</p>
                                    </div>
                                </div>
                                <strong>Address</strong>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-12 mb-3">
                                        <p class="text-muted">@Model.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="col text-center">
                                <a class="text-info" asp-action="Index"><i class="fa fa-mail-reply"></i>&nbsp; Back to Home Page</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


