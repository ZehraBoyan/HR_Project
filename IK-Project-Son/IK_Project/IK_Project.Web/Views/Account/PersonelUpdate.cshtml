@model PersonelDTO

@{
    ViewData["Title"] = "Personel Update Page";
}

<div class="col-lg-6 offset-3">
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <p class="text-center text-info">Update User</p>
            </div>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">

                    <strong>Kemal Yetim</strong><br /><br />

                    <form asp-action="PersonelUpdate" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Photo" class="control-label text-info">Photo :</label>
                            <input asp-for="Photo" type="file" name="formFile" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label text-info">Phone Number :</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label text-info">Address :</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>


                        <button type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-magic"></i>&nbsp;
                            <span id="payment-button-amount">Update</span>
                            <span id="payment-button-sending" style="display:none;">Sending…</span>
                        </button>

                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col text-center">
                <a class="text-info" asp-action="Index"><i class="fa fa-mail-reply"></i>&nbsp; Back to Home Page</a>
            </div>
        </div>
    </div> <!-- .card -->

</div><!--/.col-->
